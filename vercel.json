{
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 60
    }
  },
  "buildCommand": "npx prisma generate && next build",
  "installCommand": "npm ci",
  "env": {
    "PRISMA_GENERATE_SKIP_AUTOINSTALL": "true"
  },
  "rewrites": [
    {
      "source": "/api/health/:path*",
      "destination": "/api/health/:path*"
    }
  ]
}